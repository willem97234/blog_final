{% extends 'base.html.twig' %}

{% block body %}

    <div class="jumbotron text-center" style="margin-bottom:0">
        <img src="{{ asset('image/signup-bg.jpg') }}" alt="s2"  width="100%" height="300">
        <hr>
        <h1>The Symfony Blog</h1>
        <p>insert here informations about your article and share it.</p>
    </div>

    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <a class="navbar-brand" href="/home">Home</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="#">Article</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Contact</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/login">Sign out</a>
                </li>

            </ul>
        </div>
    </nav>

    <div class="container" style="margin-top:30px">

    <div class="row">
        <div class="col-sm-4">
            <h3>About Me</h3>
            <img src="{{ asset('image/profile.jpg') }}" alt="s2"  width="200" height="300">
            <hr>
            <h5>{{ app.user.name }}</h5>
            <h5>{{ app.user.email }}</h5>
            <p>{{ app.user.description2 }}</p>
        </div>

        <div class="col-sm-8">

            <div class="panel-heading">Post</div>
            <div class="panel-body">
                {{ form_start(form) }}
                <div class="form_group">
                    <div class="col-md-8 col-md-offset-2">
                        {{ form_row(form.title, {'attr': {'class': 'form-control'}},{'value' : post.title}) }}
                    </div>
                </div>

                <div class="form_group">
                    <div class="col-md-8 col-md-offset-2">
                        {{ form_row(form.content, {'attr': {'class': 'form-control'}},{'value' : post.content}) }}
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-8 col-md-offset-4" style="margin-top:5px;">
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-btn fa-user"></i> Update
                        </button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>


        </div>
    </div>

    <div class="jumbotron text-center" style="margin-bottom:0">

        <p>&copy; 2018 willem seneron </p>
        <p><a class="nav-link" href="#">About</a></p>
        <p><a class="nav-link" href="#">Contact us</a></p>

    </div>


{% endblock %}