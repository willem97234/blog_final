{% extends 'base.html.twig' %}


{% block body %}

    <div class="jumbotron text-center" style="margin-bottom:0">
        <img src="{{ asset('image/signup-bg.jpg') }}" alt="s2"  width="100%" height="300">
        <hr>
        <h1>The Symfony Blog</h1>
        <p>Welcome home.</p>
    </div>

    {% if app.user != null %}

        <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
            <a class="navbar-brand" href="#">Home</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">

                    <li class="nav-item">
                        <a class="nav-link" href="/postPost/{{ app.user.id }}">Article</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="#">About</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="#">Contact</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/login">Sign out</a>
                    </li>
                </ul>
            </div>
        </nav>
        <div>

        </div>

        <div class="container" style="margin-top:30px">
            <div class="row">
                <div class="col-sm-4">
                    <h3>Profile</h3>
                    <img src="{{ asset('image/profile.jpg') }}" alt="s2"  width="200" height="300">
                    <hr>
                    <h5> Name : {{ app.user.name }}</h5>
                    <h5> E-mail : {{ app.user.email }}</h5>
                    <h5>About me : </h5>
                    <p>{{ app.user.description2 }}</p>
                </div>

                <div class="col-sm-8">

                    {% for x in posts %}
                        {% if x.userid == app.user.id %}
                            <hr>
                            <br>
                            <h2>{{ x.title }}</h2>
                            <h6>Last modification the : {{ x.date }} </h6>
                            <br>
                            <p>Description : {{ x.content }}</p>
                            <a href="/deletePost/{{ x.Id }}" class="btn btn-info"> Delete </a>
                            <a href="/updatePost/{{ x.Id }}" class="btn btn-info"> Modify</a>

                        {% endif %}
                    {% endfor %}

                </div>
            </div>
        </div>

    {% endif %}

    {% if app.user == null %}
        <a href="/login" class="btn btn-info"> You need to login to your the blog</a>
    {% endif %}

    <div class="jumbotron text-center" style="margin-bottom:0">

        <p>&copy; 2018 willem seneron </p>

    </div>



{% endblock %}

